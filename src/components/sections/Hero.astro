---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import HeroBg from '../../../public/images/HomeBg.jpg'
import BtnLink from "../shared/BtnLink.astro";
---

<section class="relative w-full h-[90vh] flex items-center justify-center">
  <!-- Background -->
  <Image
    src={HeroBg}
    alt="Martial Arts Academy in Colvale, Goa - Tzur Combat Arts"
    width={1920}
    height={1080}
    class="absolute inset-0 w-full h-full object-cover"
    quality={70}
    format="webp"
    loading="eager"
    decoding="async"
  />
  
  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/70 to-black/90"></div>

  <!-- Accent gradients in the corners -->
  <div class="absolute -top-10 -left-10 w-80 h-40 bg-gradient-to-br from-primary to-orange-400 rounded-full blur-3xl opacity-30"></div>
  <div class="absolute -top-10 -right-10 w-40 h-40 bg-gradient-to-br from-primary to-green-400 rounded-full blur-3xl opacity-30"></div>
  <div class="absolute -bottom-5 -left-10 w-96 h-80 bg-gradient-to-br from-orange-400 to-primary rounded-full blur-3xl opacity-40"></div>
  <div class="absolute -bottom-2 right-10 w-80 h-60 bg-gradient-to-br from-green-400 to-primary rounded-full blur-3xl opacity-40"></div>

  <!-- Glow patch behind the text -->
  <div class="absolute inset-x-1/4 top-1/3 w-1/2 h-1/3 bg-gradient-to-tr from-primary/40 to-green-400/30 blur-3xl opacity-50"></div>

  <!-- Foreground -->
  <Container className="relative z-10 text-center px-4 text-white">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight hero-glow">
      Tzur Combat Arts Academy â€“ Goa
    </h1>

    <h2 class="mt-3 text-2xl sm:text-3xl font-semibold hero-glow">
      Learn Karate, Wushu, MMA and Fitness
    </h2>

    <Paragraph className="mt-4 max-w-2xl mx-auto text-lg sm:text-xl leading-relaxed drop-shadow-lg text-white">
      Experience high level martial arts and fitness training in Goa. 
      Build strength, sharpen discipline, and learn real self-defense skills 
      with expert-led classes for kids, adults, and professionals.
    </Paragraph>

    <div class="mt-6 flex justify-center">
      <BtnLink text="Start Your Training Today" href="#cta" variant="primary" className="flex justify-center w-full sm:w-max" />
    </div>
  </Container>
</section>